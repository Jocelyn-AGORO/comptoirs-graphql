def new_{{ model_name_lower }}(request, {{ model_key_name }}: {{ model_key_type }}):
    try:
        _{{ model_name_lower }} = {{ model_name_caps }}.objects.get(pk={{ model_key_name }})
        return 200, _{{ model_name_lower }}
